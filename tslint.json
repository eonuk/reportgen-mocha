{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "indent": [
        true,
        "tabs",
        4
    ],
    "jsRules": {},
    "rules": {
    	"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "indent": [true, "tabs"],
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "no-console": [false, "log", "error"]
    },
    "rulesDirectory": [],
    "includes": [
        "src/**/*.ts"
    ]
}
